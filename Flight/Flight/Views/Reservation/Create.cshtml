@model FlightSystem.Models.viewmodel.Reservationviewmodel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group">
                <label asp-for="PassengerId" class="control-label"></label>
            
                <select asp-validation-for="PassengerId" class="text-danger">
                    @foreach (var i in Model.passengers)
                    {
                        <option value="@i.Id">@i.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
               
                <select asp-validation-for="FlightId" class="text-danger">
                    @foreach (var i in Model.flights)
                    {
                        <option value="@i.Id">@i.Airline</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
